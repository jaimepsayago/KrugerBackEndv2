package com.kruger.mvc.controller;


import java.lang.reflect.Array;
import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

import com.kruger.mvc.model.Usuario;





@Controller
public class DemoController {
	

@Value("${texto.indexcontroller.index.titulo}")
private String textoIndex;

@Value("${texto.indexcontroller.perfil.titulo}")
private String textoPerfil;

@Value("${texto.indexcontroller.listar.titulo}")
private String textoListar;


	@GetMapping({"/index", "/", "", "/home"})
	public String index(Model model) {
		model.addAttribute("titulo", textoIndex);
		return "index";
	}
	
	//mvc enviar datos
	//perfil de usuario enviar datos del usuario
	
	@RequestMapping("/perfil")
	public String perfil(Model model) {
		Usuario usuario = new Usuario();
		usuario.setNombre("Jaime");
		usuario.setApellido("Sayago");
		//usuario.setEmail("jaime@gmail");
		
		model.addAttribute("usuario", usuario);
		model.addAttribute("titulo", textoPerfil.concat(usuario.getNombre()));
		
		
		return "perfil" ;//vista
	}
	
	
	//listar datos desde un array
	
	@RequestMapping("/listar")
	public String listar(Model model) {
		
		
		
		return "listar";
	}
	
	@ModelAttribute("usuarios")
	public List<Usuario> poblarUsuarios(){
		List<Usuario> usuarios = Arrays.asList(new Usuario("jaime", "sayago", "jaimemail"),
				new Usuario("rosa", "calle", "rosamail"),
				new Usuario("pablo", "torres", "pablomail"
				));
		
		
		return usuarios;
	}
	
		
	
	
	
}
